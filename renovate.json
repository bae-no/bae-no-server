{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all"
    }
  ],
  "patch": {
    "enabled": false
  }
}
